# Database Configuration
# PostgreSQL connection string for Neon database
# Format: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://user:password@aws-region.pooler.supabase.com:6543/postgres"

# Supabase Configuration
# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase publishable key for client-side authentication
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your_publishable_key_here

# Google OAuth Configuration
# Google OAuth Client ID (available from Google Cloud Console)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com

# Google OAuth Client Secret (keep this private!)
GOOGLE_CLIENT_SECRET=your_client_secret_here

# OAuth Redirect URI (typically your Supabase auth callback URL)
GOOGLE_REDIRECT_URI=https://your-project.supabase.co/auth/v1/callback

# OAuth Callback URL for sign-in (optional - auto-detected from window.location.origin)
# For development: http://localhost:3000/auth/callback
# For production: https://yourdomain.com/auth/callback
# Leave this unset to use dynamic detection (recommended)
NEXT_PUBLIC_REDIRECT_URL=http://localhost:3000/auth/callback

# Application Base URL (used for various purposes)
BASE_URL=http://localhost:3000

# Google Drive Configuration
# Root folder ID for storing event-related documents
ROOT_FOLDER_DRIVE=your_google_drive_folder_id

# Google Docs Template ID for event proposals
EVENT_PROPOSAL_TEMPLATE_ID=your_google_docs_template_id

# Optional: Email Service (Resend)
# API key for Resend email service
RESEND_API_KEY="your_resend_api_key"

# Optional: Supabase Admin Password (for development)
# Database password for direct access
SUPABASE_PASSWORD=your_admin_password

